<%= render "errors" %>

<fieldset>
  <legend><%= t '.legend' %></legend>
  <div class="form-group<%if @directors.last.errors[:first_name].any?%> validation<%end%>">
    <%= validation_for(@directors.last, :first_name) %>
    <%= f.label :first_name, class: 'form-label' %>
    <%= f.text_field :first_name, :size => 20, :maxlength => 35 %>
  </div>
  <div class="form-group<%if @directors.last.errors[:last_name].any?%> validation<%end%>">
    <%= validation_for(@directors.last, :last_name) %>
    <%= f.label :last_name, class: 'form-label' %>
    <%= f.text_field :last_name, :size => 20, :maxlength => 35 %>
  </div>
  <div class="form-group<%if @directors.last.errors[:dob_day].any?%> validation<%end%>">
    <%= validation_for(@directors.last, :dob_day) %>
    <%= f.label :dob_day, class: 'form-label' %>
    <%= f.text_field :dob_day, :size => 2, :maxlength => 2 %>
  </div>
  <div class="form-group<%if @directors.last.errors[:dob_month].any?%> validation<%end%>">
    <%= validation_for(@directors.last, :dob_month) %>
    <%= f.label :dob_month, class: 'form-label' %>
    <%= f.text_field :dob_month, :size => 2, :maxlength => 2 %>
  </div>
  <div class="form-group<%if @directors.last.errors[:dob_year].any?%> validation<%end%>">
    <%= validation_for(@directors.last, :dob_year) %>
    <%= f.label :dob_year, class: 'form-label' %>
    <%= f.text_field :dob_year, :size => 4, :maxlength => 4 %>
  </div>

</fieldset>

<input name="add" class="button button-get-started" type="submit" value="<%= t 'form.add_button_label' %>"/>
