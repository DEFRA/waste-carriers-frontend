<%= render 'shared/content_for_pages' %>

<main id="content" role="main" class="group">
  <article role="article" class="group">

    <!-- WF 4.3.2 -->
    <div id="page7"  data-journey="waste-carriers-registration:director-details">

      <% content_for :page_title, createTitle('.title') %>
      <div class="step"><%= t '.step' %></div>

      <%= form_for(@director, url: {action: "create"} ) do |f| %>
        <%= render 'form', f: f, d: @director %>
        <div class="inline">
          <span class="next_link">
            <input name="next" class="button button-get-started" type="submit" value="<%= t '.add_director_button_text' %>"/>
          </span>
        </div>
      <% end %>
    </div>

    <%= form_for(@registration, :url => { :action => 'done' }, :method => 'get'  ) do |f| %>
        <%= render 'wizard_links' %>
    <% end %>

    <%= render 'directors_index' %>
  </article>
</main>