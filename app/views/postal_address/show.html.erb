<%= render 'shared/content_for_pages' %>

<div id="wrapper">
  <main id="content" role="main" class="group">

    <% content_for :page_title, createTitle('postal_address.show.title') %>

    <div id="page" data-journey="waste-carriers-registration:postal-address">

      <div class="back-section">
        <ol>
          <li><%= link_to t('form.back_button_label'), :back, id: 'back_link' %></li>
        </ol>
      </div>

      <%= form_for(@address, url: postal_address_path, html: { autocomplete: 'off', :method => :post }) do |f| %>

        <%= render 'shared/errors' %>

        <header class="page-header group">
          <div class="hgroup">
            <h1 class="heading-large" id="groupLabel"><%= t '.subtitle' %></h1>
            <div class="subtitle"><%= t '.subtitle1' %></div>
          </div>
        </header>

        <details class="text">
          <summary id="show-hide-details-summary-0" aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" role="button">
            <span class='summary'><%= t '.subtitle2' %></span>
          </summary>
          <div style='display:block' class='panel-indent' id='details-content-0' >
            <p><%= t '.subtitle3' %></p>
            <p><%= t '.subtitle4' %></p>
          </div>
        </details>

        <div class="form-group<%if @address.errors[:firstName].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel">
            <%= validation_for(@address, :firstName) %>
            <%= f.label :firstName, class: 'form-label' %>
            <%= f.text_field :firstName, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
        </div>
        <div class="form-group<%if @address.errors[:lastName].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel">
            <%= validation_for(@address, :lastName) %>
            <%= f.label :lastName, class: 'form-label' %>
            <%= f.text_field :lastName, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
        </div>
        <div class="form-group<%if @address.errors[:addressLine1].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel">
            <%= validation_for(@address, :addressLine1) %>
            <%= f.label :addressLine1, class: 'form-label' %>
            <%= f.text_field :addressLine1, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
        </div>
        <div class="form-group<%if @address.errors[:addressLine2].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel">
            <%= validation_for(@address, :addressLine2) %>
            <%= f.label :addressLine2, class: 'form-label offscreen' %>
            <%= f.text_field :addressLine2, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
        </div>
        <div class="form-group<%if @address.errors[:addressLine3].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel">
            <%= validation_for(@address, :addressLine3) %>
            <%= f.label :addressLine3, class: 'form-label' %>
            <%= f.text_field :addressLine3, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
        </div>
        <div class="form-group<%if @address.errors[:addressLine4].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel">
            <%= validation_for(@address, :addressLine4) %>
            <%= f.label :addressLine4, class: 'form-label offscreen' %>
            <%= f.text_field :addressLine4, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
        </div>
        <div class="form-group<%if @address.errors[:townCity].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel">
            <%= validation_for(@address, :townCity) %>
            <%= f.label t('postal_address.show.town_city'), class: 'form-label' %>
            <%= f.text_field :townCity, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
        </div>
        <div class="form-group<%if @address.errors[:postcode].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel">
            <%= validation_for(@address, :postcode) %>
            <%= f.label t('postal_address.show.postcode'), class: 'form-label' %>
            <%= f.text_field :postcode, class: 'form-control-1-2', :size => 14, :maxlength => 10 %>
        </div>
        <div class="form-group<%if @address.errors[:country].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel">
            <%= validation_for(@address, :country) %>
            <%= f.label t('postal_address.show.country'), class: 'form-label' %>
            <%= f.text_field :country, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
        </div>

        <%= render 'shared/registration_continue_link' %>

      <% end %>

    </div>
  </main>
</div>
