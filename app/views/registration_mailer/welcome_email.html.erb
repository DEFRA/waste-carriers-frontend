            <tr>
            	<td align="left" width="75%" style="font-family: Helvetica, Arial, sans-serif;">
                <% message = "#{t('registration_mailer.welcome_email.tier_result_message', :companyName => @registration.companyName, :tier_with_article => @registration.tier.downcase.with_indefinite_article)}" %>
                <h1 class="email" style="font-weight: 700; font-size: 36px; line-height: 1.041666667; margin: 30px 0;"><%= message %></h1>
              </td>
            </tr>
            <!-- end section one title -->
            <!-- Spacing -->
            <tr>
               <td width="100%" height="30"></td>
            </tr>
            <!-- Spacing -->
            <!-- section one content - business details -->
            <tr>
              <td align="left" width="75%" style="font-family: Helvetica, Arial, sans-serif;">

								<h2 class="email" style="font-size: 28px; line-height: 1.11111; margin: 0 0 15px 0;">
									<%= t 'registration_mailer.welcome_email.detailsHeading'%></h2>

                <p style="font-size: 16px; line-height: 1.31579;">
                <%= @registration.firstName%> <%= @registration.lastName%></p>

                <p style="font-size: 16px; line-height: 1.31579;">
                <%= @registration.houseNumber %></p>

                <p style="font-size: 16px; line-height: 1.31579;">
                <%= @registration.streetLine1 %></p>

                <p style="font-size: 16px; line-height: 1.31579;">
                <%= @registration.streetLine2 %></p>

                <p style="font-size: 16px; line-height: 1.31579;">
                <%= @registration.streetLine2 %></p>

                <p style="font-size: 16px; line-height: 1.31579;">
                <%= @registration.townCity%></p>

                <p style="font-size: 16px; line-height: 1.31579;">
                <%= @registration.postcode%></p>

              </td>
          	</tr>
             <!-- end of section one business details -->
            <!-- Spacing -->
            <tr>
               <td width="100%" height="30"></td>
            </tr>
            <!-- Spacing -->
            <!-- section two - registration details -->
            <tr>
              <td align="left" width="75%" style="font-family: Helvetica, Arial, sans-serif;">
              	<h2 class="email" style="font-size: 28px; line-height: 1.11111; margin: 0 0 15px 0;">
              	  <%= t 'registration_mailer.welcome_email.registrationHeading'%></h2>

                <h2 class="email" style="font-size: 19px; line-height: 1.11111; margin: 0 0 15px 0;">
                  <%=t 'registration_mailer.welcome_email.proof'%></h2>

                  <ul>
                    <li style="font-size: 16px; line-height: 1.31579;">
                    <%=t 'registration_mailer.welcome_email.contactName'%><%= @registration.firstName%> <%= @registration.lastName%></li>

                    <li style="font-size: 16px; line-height: 1.31579;">
                    <%=t 'registration_mailer.welcome_email.phoneNumber'%><%= @registration.phoneNumber%></li>

                    <li style="font-size: 16px; line-height: 1.31579;">
                    <%= t 'registrations.finish.your_reg_number', :reg => @registration.regIdentifier %></li>

                    <li style="font-size: 16px; line-height: 1.31579;">
                    <%= t 'registration_mailer.welcome_email.registeredOn', date: @registration.formatted_registration_date %></li>
                  </ul>
              	</td>
              </tr>
              <!-- end section two - registration details -->
              <!-- Spacing -->
              <tr>
                <td align="left" width="75%" style="font-family: Helvetica, Arial, sans-serif;">
                    <% if @registration.lower? %>
                    <p style="font-size: 16px; line-height: 1.31579; margin: 0 0 15px 0;"><%= t 'registration_mailer.welcome_email.renewal_html'%>
                      <% if !@registration.assisted_digital? %></p>
                    <p style="font-size: 16px; line-height: 1.31579; margin: 0 0 15px 0;"><%=t 'registration_mailer.welcome_email.updateWebsite_html',:link=>link_to('sign in', new_user_session_url)%></p>
                      <% else %>
                    <p style="font-size: 16px; line-height: 1.31579;"><%=t 'registration_mailer.welcome_email.updatePhone'%></p>
