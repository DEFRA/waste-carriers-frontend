<tbody>
<tr>
  <td>
  <table bgcolor="#ffffff" width="500" align="center" cellspacing="0" cellpadding="0" border="0" class="devicewidth" modulebg="edit">
    <tbody>
  	<!-- Spacing -->
    <tr>
      <td width="100%" height="20"></td>
    </tr>
    <tr>
      <td>
        <table width="500" align="left" cellspacing="0" cellpadding="0" border="0" class="devicewidthinner">
      <tbody>
        <tr>
          <!-- start of image -->
          <td width="100%" bgcolor="#ffffff" align="left">
             <img src="https://assets.digital.cabinet-office.gov.uk/government/uploads/system/uploads/organisation/logo/199/EAlogo.png" alt="" width="250px" height="69px" />
          </td>
        </tr>
          <!-- end of image -->
          <!-- Spacing -->
          <tr>
            <td width="100%" height="20"></td>
          </tr>
            <!-- Spacing -->
