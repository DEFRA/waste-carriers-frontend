<%= render 'shared/content_for_pages' %>

<div id="wrapper">
  <main id="content" role="main" class="group">

    <header class="page-header group">
      <div class="hgroup">
        <h1 class="heading-xlarge"><%= t '.title' %></h1>
      </div>
    </header>

    <div id="wrapper" data-journey="waste-carriers-registration:contact-us-to-complete-payment"></div>

    <% if user_signed_in? %>
      <p class="text"><%= t('.paragraph1') %></p>
      <p class="text"><%= t('.paragraph2', reg_num: @registration.regIdentifier) %></p>
      <p class="text">
        <%= t('.paragraph3', link: link_to(t(".paragraph3_link_text"), user_registrations_path(current_user))).html_safe %>
      </p>
    <% elsif agency_user_signed_in? %>
      <p class="text"><%= t('.nccc_paragraph1') %></p>
      <p class="text"><%= link_to(t('.nccc_go_home_link'), registrations_path) %></p>
    <% end %>

  </main><!-- end content -->
</div><!-- end wrapper -->
