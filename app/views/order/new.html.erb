<%= render 'shared/content_for_pages' %>

<div id="wrapper">

  <main id="content" role="main" class="group">

  <div class="back-section">
    <ol>
      <li><%= render 'shared/registration_back_link' %></li>
    </ol>
  </div>

  <header class="page-header group">
    <div class="hgroup">
      <h1 class="heading-xlarge"><%= t '.subtitle' %></h1>
    </div>
  </header>

  <div class="grid-wrapper">

  <div class="grid-2-3">
  <div class="inner-block">

  <section id='payment-copycard-page'>

    <%= form_for(@registration, :url => :upper_payment, :method => 'post') do |f| %>
    <% content_for :page_title, createTitle('.title') %>

    <%= render "order/notice_or_alert" %>
    <%= render "shared/registration_errors" %>
    <%= render "order/order_errors" %>

    <table summary='payment-summary' role='presentation' id="payment-summary-table">
      <thead>
        <tr>
          <th></th>
        </tr>
      </thead>
      <tbody>

        <% if showRegistrationFee?(@renderType) or showEditFee?(@renderType) or showRenewalFee?(@renderType) %>
        <tr>
          <td>
            <%= render "order/registration_fee", :f => f if showRegistrationFee? @renderType %>
            <%= render "order/edit_registration_fee", :f => f if showEditFee? @renderType %>
            <%= render "order/renew_registration_fee", :f => f if showRenewalFee? @renderType %>
          </td>
        </tr>
        <% end %>

        <% if showCopyCards?(@renderType) %>
        <tr>
          <td><%= render "order/copy_cards", :f => f %>
          </td>
        </tr>
        <% end %>

        <tr>
          <td class='total-charge'>
            <%= f.label :total_fee, class: 'form-label' %>
            <div class="currency-container">
            <p class="currency-sign">Â£</p>
            <%= f.text_field :total_fee, :size =>5, :autocomplete => :off, :maxlength => 4, :disabled=>true, :value => Money.new(@registration.total_fee) %>
          </div>
          </td>
        </tr>
      </tbody>
    </table>
      <p class='form-note'><%= t '.total_fee_vat' %></p>
      <br/>

    <fieldset>
    <legend class="heading-large">Make a payment</legend>

    <div class="payment-options">

    <div class="form-group text">
      <h1 class="heading-small">Payment by credit or debit card</h1>
      <p class="panel-indent">Making a payment by credit or debit card will take you to the WorldPay website, where your payment will be processed.</p>
      <input name="next" class="button" type="submit" value="<%= t 'registrations.form.pay_by_worldpay_button_label' %>"/>
      <div class="payment-notice">
        <div class='form-note' id="world-pay-subtitle"><%= t '.send_to_worldpay' %></div>
      </div>
    </div>


    <div class="form-group text">
      <h2 class="heading-small">Payment by bank transfer</h2>
      <div class="panel-indent">
        <p>Pay by bank transfer will require you to complete a 2 step process</p>
        <ul class="list-bullets">
          <li><strong>Step 1</strong> - contact your bank and give them our account details which we will provide for you</li>
          <li><strong>Step 2</strong> - then, contact us with the reference number your bank provides you, so we can activate your registration</li>
        </ul>
         <p><strong>Please note - you will not be registered unless both steps are completed.</strong></p>
      </div>
    </div>
      <input name="offline_next" class="button" type="submit" value="<%= t 'registrations.form.pay_offline_button_label' %>"/>
    </div>
  </fieldset>
  <% end %>
  </section>

    </div><!-- end inner-block -->
  </div><!-- end grid 2-3-->

  <% if showCopyCards?(@renderType) %>
    <div class="grid-1-3 copy-card">
      <div class="inner-block related">
        <div class="inner group related-subsection">
          <h2 class="heading-small">What are copy cards?</h2>
          <nav aria-labelledby="parent-subsection" role="navigation">
            <div class="image-holder" alt="Example of a copy card registration">
            <%= image_tag "copy_card.png"%>
            </div>
              <figcaption>Copy card example - copy cards are credit-card sized copies of your registration.</figcaption>
              <ul class="list-bullets related">
                <h2 class="heading-small">Copy card information</h2>
              <li>
                <p>Copy cards are useful if you want team members to carry a copy of your waste carrier registration.</p>
              </li>
              <li>
                <p>Additional copy cards can be purchased after your registration is complete. You will need to sign into your account to do this.</p>
              </li>
              <li>
                <p>Please note - copy cards can take up to 10 working days to arrive depending on the status of your registration.</p>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div><!-- end grid 1-3-->
  <% end %>

    </div><!-- end grid-wrapper -->

  </main><!-- end main -->
</div><!-- end wrapper -->
