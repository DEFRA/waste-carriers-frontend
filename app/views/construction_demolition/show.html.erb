<%= render 'shared/content_for_pages' %>

<div id="wrapper">
  <main id="content" role="main" class="group">

    <% content_for :page_title, createTitle('.title') %>

    <div id="page4" data-journey="waste-carriers-registration:constructiondemolition">

      <div class="back-section">
        <ol>
          <li><%= link_to t('form.back_button_label'), :back, id: 'back_link' %></li>
        </ol>
      </div>

      <%= form_for(@registration, :url => construction_demolition_path, html: {autocomplete: 'off'}) do |f| %>

        <%= render 'shared/registration_errors' %>

        <header class="page-header group">
          <div class="hgroup">
            <h1 class="heading-large" id="groupLabel"><%= t '.subtitle' %></h1>
          </div>
        </header>

        <details class="text">
          <summary aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" aria-expanded="true" role="button">
            <span class='summary'><%= t '.explanation_link' %></span>
          </summary>
          <div style='display:block' class='panel-indent' id='details-content-0' >
            <p><%= t '.explanation' %></p>
            <p><%= t '.explanation2' %></p>
          </div>
        </details>

        <div class="form-group inline<%if @registration.errors[:constructionWaste].any?%> validation<%end%>" id="registration_constructionWaste" role="group" aria-labelledby="groupLabel">
          <%= validation_for(@registration, :constructionWaste) %>
            <%= f.label :yes_option_label, for: "registration_constructionWaste_yes", :class => 'block-label' do %>
              <%= f.radio_button :constructionWaste, "yes", :class => "radio" %>
              <%= t 'form.yes_option_label' %>
            <% end %>
            <%= f.label :no_option_label, for: "registration_constructionWaste_no", :class => 'block-label' do %>
              <%= f.radio_button :constructionWaste, "no", :class => "radio" %>
              <%= t 'form.no_option_label' %>
            <% end %>
        </div>

        <%= render 'shared/registration_continue_link' %>

      <% end %>
    </div>
  </main>
</div>
