<main id="content" role="main" class="group">
  <article role="article" class="group">

    <%= form_for(@registration, :url => :upper_relevant_conviction) do |f| %>

      <h1 class="subtitle"><%= t 'upper_registrations.form.subtitle' %></h1>

      <% content_for :page_title, createTitle('.title') %>

      <%= render "shared/progress", size: "20%" %>

      <%= render "errors" %>

      <div id="page5" data-journey="waste-carriers-upper-registration:relevant-conviction">

      <fieldset>
        <legend><%= t '.form_legend' %></legend>
        <p><%= t '.subtitle' %></p>
        <p class="group<%if @registration.errors[:relevant_conviction].any?%> validation<%end%>">
          <span class="inline"><!-- GDS have an 'option' class but we prefer this simplified version -->
            <!--<label class="label" for="discover_isMainService_yes">-->
            <%= f.radio_button :relevant_conviction, "Fly tipping", :class => "radio" %><%= f.label :fly_tipping, :class => "label" %>
          </span>
          <span class="inline">
            <%= f.radio_button :relevant_conviction, "Cow tipping", :class => "radio" %><%= f.label :cow_tipping, :class => "label" %>
          </span>
          <span class="inline">
            <%= f.radio_button :relevant_conviction, "Waiter tipping", :class => "radio" %><%= f.label :waiter_tipping, :class => "label" %>
          </span>
          <span class="inline">
            <%= f.radio_button :relevant_conviction, "No relevant convictions", :class => "radio" %><%= f.label :no_convictions, :class => "label" %>
          </span>
        </p>
      </fieldset>

      <%= link_to t('upper_registrations.form.back_button_label'), :upper_business_detail, :class => 'button-secondary' %>
      <input name="next" class="button" type="submit" value="<%= t 'upper_registrations.form.next_button_label' %>"/>
      </p>

    <% end %>
  </article>
</main>
