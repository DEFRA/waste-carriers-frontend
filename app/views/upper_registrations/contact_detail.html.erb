<main id="content" role="main" class="group">
  <article role="article" class="group">

    <%= form_for(@registration, :url => :upper_contact_detail) do |f| %>

      <h1 class="subtitle"><%= t 'upper_registrations.form.subtitle' %></h1>

      <% content_for :page_title, createTitle('.title') %>

      <%= render "shared/progress", size: "20%" %>

      <%= render "errors" %>

      <div id="page2" data-journey="waste-carriers-upper-registration:contact-details">

      <fieldset>
        <legend><%= t '.form_legend' %></legend>
        <p class="group<%if @registration.errors[:full_name].any?%> validation<%end%>">
          <%= validation_for(@registration, :full_name) %>
          <%= f.label :full_name %>
          <%= f.text_field :full_name, :size => 20, :maxlength => 35 %>
        </p>
        <p class="group<%if @registration.errors[:job_title].any?%> validation<%end%>">
          <%= validation_for(@registration, :job_title) %>
          <%= f.label :job_title %>
          <%= f.text_field :job_title, :size => 20, :maxlength => 35 %>
        </p>
        <p class="group<%if @registration.errors[:telephone_number].any?%> validation<%end%>">
          <%= validation_for(@registration, :telephone_number) %>
          <%= f.label :telephone_number %>
          <%= f.text_field :telephone_number, :size => 20, :maxlength => 20 %>
        </p>
        <p class="group<%if @registration.errors[:email_address].any?%> validation<%end%>">
          <%= validation_for(@registration, :email_address) %>
          <%= f.label :email_address %>
          <%= f.text_field :email_address, :size => 20, :maxlength => 70 %>
        </p>
      </fieldset>

      <%= link_to t('upper_registrations.form.back_button_label'), :upper_contact_detail, :class => 'button-secondary' %>
      <input name="next" class="button" type="submit" value="<%= t 'upper_registrations.form.next_button_label' %>"/>
      </p>

    <% end %>
  </article>
</main>
