<main id="content" role="main" class="group">
  <article role="article" class="group">

    <%= form_for(@registration, :url => :upper_contact_detail) do |f| %>

      <% content_for :page_title, createTitle('.title') %>

      <div class="step">Step 6 of 9</div>
      <h1 class="subtitle"><%= t '.subtitle' %></h1>

      <%= render "errors" %>

      <div class"wrap">
        <div class="right">
          <fieldset>
            <legend><%= t '.alternate_form_legend' %></legend>
            <p class="group<%if @registration.errors[:alt_first_name].any?%> validation<%end%>">
              <%= validation_for(@registration, :alt_first_name) %>
              <%= f.label :alt_first_name %>
              <%= f.text_field :alt_first_name, :size => 20, :maxlength => 35 %>
            </p>
            <p class="group<%if @registration.errors[:alt_last_name].any?%> validation<%end%>">
              <%= validation_for(@registration, :last_name) %>
              <%= f.label :alt_last_name %>
              <%= f.text_field :alt_last_name, :size => 20, :maxlength => 35 %>
            </p>
            <p class="group<%if @registration.errors[:alt_job_title].any?%> validation<%end%>">
              <%= validation_for(@registration, :alt_job_title) %>
              <%= f.label :alt_job_title %>
              <%= f.text_field :alt_job_title, :size => 20, :maxlength => 35 %>
            </p>
            <p class="group<%if @registration.errors[:alt_telephone_number].any?%> validation<%end%>">
              <%= validation_for(@registration, :alt_telephone_number) %>
              <%= f.label :alt_telephone_number %>
              <%= f.telephone_field :alt_telephone_number, :size => 20, :maxlength => 20 %>
            </p>
            <p class="group<%if @registration.errors[:alt_email_address].any?%> validation<%end%>">
              <%= validation_for(@registration, :alt_email_address) %>
              <%= f.label :alt_email_address %>
              <%= f.email_field :alt_email_address, :size => 20, :maxlength => 70 %>
            </p>
          </fieldset>
        </div>
        <div class="left">
          <fieldset>
            <legend><%= t '.director_form_legend' %></legend>
            <p class="group<%if @registration.errors[:first_name].any?%> validation<%end%>">
              <%= validation_for(@registration, :first_name) %>
              <%= f.label :first_name %>
              <%= f.text_field :first_name, :size => 20, :maxlength => 35 %>
            </p>
            <p class="group<%if @registration.errors[:last_name].any?%> validation<%end%>">
              <%= validation_for(@registration, :last_name) %>
              <%= f.label :last_name %>
              <%= f.text_field :last_name, :size => 20, :maxlength => 35 %>
            </p>
            <p class="group<%if @registration.errors[:job_title].any?%> validation<%end%>">
              <%= validation_for(@registration, :job_title) %>
              <%= f.label :job_title %>
              <%= f.text_field :job_title, :size => 20, :maxlength => 35 %>
            </p>
            <p class="group<%if @registration.errors[:telephone_number].any?%> validation<%end%>">
              <%= validation_for(@registration, :telephone_number) %>
              <%= f.label :telephone_number %>
              <%= f.telephone_field :telephone_number, :size => 20, :maxlength => 20 %>
            </p>
            <p class="group<%if @registration.errors[:email_address].any?%> validation<%end%>">
              <%= validation_for(@registration, :email_address) %>
              <%= f.label :email_address %>
              <%= f.email_field :email_address, :size => 20, :maxlength => 70 %>
            </p>
          </fieldset>
        </div>
      </div>

      <p>
        <%= link_to t('upper_registrations.form.back_button_label'), :upper_business_address, :class => 'button-secondary' %>
        <input name="next" class="button" type="submit" value="<%= t 'upper_registrations.form.next_button_label' %>"/>
      </p>

    <% end %>
  </article>
</main>
