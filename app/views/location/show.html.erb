<%= render 'shared/content_for_pages' %>

<div id="wrapper">
  <main id="content" role="main" class="group">

    <% content_for :page_title, createTitle('.title') %>

    <div id="page1" data-journey="waste-carriers-registration:location">

      <div class="back-section">
        <ol>
          <li><%= link_to t('form.back_button_label'), :back, id: 'back_link' %></li>
        </ol>
      </div>

      <%= form_for(@registration, :url => location_path(reg_uuid: @registration.reg_uuid), html: {autocomplete: 'off', :method => :post}) do |f| %>

        <%= render 'shared/errors' %>

        <header class="page-header group">
          <div class="hgroup">
            <h1 class="heading-large" id="groupLabel"><%= t '.subtitle' %></h1>
          </div>
        </header>

        <details class="text">
          <summary id="show-hide-details-summary-0" aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" role="button">
            <span class='summary'><%= t '.explanation_link' %></span>
          </summary>
          <div style='display:block' class='panel-indent' id='details-content-0' >
            <p><%= t '.explanation' %></p>
          </div>
        </details>

        <div class="form-group<%if @registration.errors[:location].any?%> validation<%end%>" id="registration_location" role="group" aria-labelledby="groupLabel">
          <%= validation_for(@registration, :location) %>
          <%= f.label :location, for: "registration_location_england",  class: 'block-label' do %>
            <%= f.radio_button :location, 'england' %>
            <%= t '.england' %>
          <% end %>
          <%= f.label :location, for: "registration_location_wales",  class: 'block-label' do %>
            <%= f.radio_button :location, 'wales' %>
            <%= t '.wales' %>
          <% end %>
          <%= f.label :location, for: "registration_location_scotland",  class: 'block-label' do %>
            <%= f.radio_button :location, 'scotland' %>
            <%= t '.scotland' %>
          <% end %>
          <%= f.label :location, for: "registration_location_northern_ireland",  class: 'block-label' do %>
            <%= f.radio_button :location, 'northern_ireland' %>
            <%= t '.northern_ireland' %>
          <% end %>
          <%= f.label :location, for: "registration_location_overseas",  class: 'block-label' do %>
            <%= f.radio_button :location, 'overseas' %>
            <%= t '.overseas' %>
          <% end %>
        </div>

        <%= render 'shared/registration_continue_link' %>

      <% end %>

    </div>
  </main>
</div>
