<% registration_in_progress ||= false %>

<details class="text">
  <summary aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" role="button">
    <span class='summary'><%= t 'shared.sign_in_help.sign_in_problems' %></span>
  </summary>
  <div style='display:block' id='details-content-0' >
    <p><%= t 'shared.sign_in_help.sign_in_problems_paragraph' %><%= link_to t('shared.sign_in_help.sign_in_problems_link'), new_password_path(resource_name) %></p>
  </div>
</details>

<% if resource_name == :user %>
  <% unless registration_in_progress %>
    <details class="text">
      <summary aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" role="button">
        <span class='summary'><%= t 'shared.sign_in_help.sign_in_email_unknown' %></span>
      </summary>
      <div style='display:block' id='details-content-0' >
        <p><%= t 'shared.sign_in_help.sign_in_email_unknown_paragraph' %></p>
      </div>
    </details>
  <% end %>

  <details class="text">
    <summary aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" role="button">
      <span class='summary'><%= t 'shared.sign_in_help.sign_in_confirm' %></span>
    </summary>
    <div style='display:block' id='details-content-0' >
      <p><%= t 'shared.sign_in_help.sign_in_confirm_heading' %></p>
      <p class="panel-indent"><%= t '.sign_in_confirm_paragraph' %></p>
      <ul>
        <li><%= link_to t('shared.sign_in_help.sign_in_confirm_link'), new_confirmation_path(resource_name) %></li>
      </ul>
    </div>
  </details>
<% end %>

<% if resource_name == :agency_user || resource_name == :admin %>
  <details class="text">
    <summary aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" role="button">
      <span class='summary'><%= t 'shared.sign_in_help.sign_in_unlock' %></span>
    </summary>
    <div style='display:block' id='details-content-0' >
      <p><%= t 'shared.sign_in_help.sign_in_unlock_paragraph' %><%= link_to t('shared.sign_in_help.sign_in_unlock_link'), new_unlock_path(resource_name) %></p>
    </div>
  </details>
<% end %>
