<div class="inner-block">
  <div class="phase-banner blue-header" id="global-beta-message">
    <p><strong class="phase-tag"><%=t 'global.betaMessage'%></strong>
      <span><%=t 'global.betaMessage_html'%></span>
    </p>
  </div>
</div>

<%= render 'shared/google_data_layer' %>

<% if Time.zone.now.hour == 10  && !ENV.has_key?('DISABLE_NIGHTLY_WARNING') %>
  <div class="warning-banner">
    <div class="validation-summary" role="group" aria-labelledby="error-summary-heading-example-1">
      <h1 class="heading-medium error-summary-heading" id="error-summary-heading-example-1">
        <%= t('global.nightly_downtime_warning.heading') %>
      </h1>
      <p><%= t('global.nightly_downtime_warning.maintenance') %></p>
      <p><%= t('global.nightly_downtime_warning.please_come_back') %></p>
    </div>
  </div>
<% end %>
