<% if @order.errors.any? %>
    <% full_messages = one_full_message_per_invalid_attribute(@order) %>
    <div id="error_explanation" class="validation-summary">
      <h2 class="heading-medium"><%= t 'registrations.errors.errorMessage', :count => pluralize(full_messages.count, t('registrations.errors.error')) %></h2>
        <% full_messages.each do |msg| %>
            <a class="error-text" href="#order<%= msg %>"><%= msg %></a>
        <% end %>
    </div>
<% end %>