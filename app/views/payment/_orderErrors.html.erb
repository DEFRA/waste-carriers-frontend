<% if @order.errors.any? %>
    <% full_messages = one_full_message_with_key_per_invalid_attribute(@order) %>
    <div id="error_explanation" class="validation-summary">
      <h2 class="heading-medium"><%= t 'registrations.errors.errorMessage', :count => pluralize(full_messages.count, t('registrations.errors.error')) %></h2>
        <% full_messages.each do |error_hash| field = error_hash.first[0]; msg = error_hash.first[1] %>
        <ul>
            <li><a class="error-text" href="#order_<%= field %>"><%= msg %></a></li>
        </ul>
    </div>
<% end %>
