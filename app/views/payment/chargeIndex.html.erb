<%= render 'shared/content_for_pages' %>

<div id="wrapper">

<main id="content" role="main" class="group">

  <header class="page-header group">
    <div class="hgroup">
        <h1 class="heading-large"><%= t '.heading' %></h1>
    </div>
  </header>

  <div class="grid-wrapper">

	  <% content_for :page_title, createTitle('.heading') %>

	  <!-- Usefull for showing default messages -->
	  <% if alert %><%= alert %><% end %>

	  <%= form_tag do %>
		<div class="step"><%= t '.step' %></div>

		<!-- WF X.X.X -->
		<div id="charge-index" data-journey="waste-carriers-registration:charge-index"></div>

    <div class="grid-2-3">
      <div class="inner-block">

			<fieldset>
				<legend></legend>

				<div class="form-group">
						<label class="form-label">From here you can add additional entries in the Orders list, with either positive or negative values:</label>
				</div>

				<div class="form-group">
						<label class="form-label">Enter a charge with a positive amount</label>
						<input name="positive_payment" class="button" type="submit" value="<%= t 'registrations.form.chargePositive_button_label' %>"/>
				</div>

				<div class="form-group">
						<label class="form-label">Enter a charge with a negative amount</label>
            <input name="negative_payment" class="button" type="submit" value="<%= t 'registrations.form.chargeNegative_button_label' %>"/>
				</div>

				<div class="inline">
				    <noscript>
				        <%= content_tag :p, t('registrations.back_link_unavailable') %>
				    </noscript>
				    <%= link_to t('registrations.form.back_button_label'), :paymentstatus, :class => 'link_to' %>
				</div>

		  </fieldset>

      <% end %>
    </div>
    </div><!-- end grid-2-3 -->

    <div class="grid-1-3">
      <div class="inner-block related">
        <div class="inner group related-subsection">
          <h2 class="heading-small">Current user</h2>
            <%= render "shared/current_user" %>
        </div>
      </div>
    </div><!-- end grid 1-3-->


    </div><!-- end grid-wrapper -->

  </main><!-- end main -->
</div><!-- end wrapper -->
