<%= render 'shared/content_for_pages' %>

<main id="content" role="main" class="group">
	<article role="article" class="group">
	<section>
      <div class="inner">
      <div class="col-1">
	
	  <% content_for :page_title, createTitle('.heading') %>

	  <!-- Usefull for showing default messages -->
	  <% if alert %><%= alert %><% end %>
	
	  <%= form_tag do %>
		<div class="step"><%= t '.step' %></div>

		<!-- WF X.X.X -->
		<div id="charge-index" data-journey="waste-carriers-registration:charge-index">

			<fieldset>
				<legend><%= t '.heading' %></legend>
				
				<div class="form-group">
						<label>From here you can add additional entries in the Orders list, with either positive or negative values:</label>
				</div>
				
				<div class="form-group">
						<label>Enter a charge with a positive amount</label><br/>
						<input name="positive_payment" class="button" type="submit" value="<%= t 'registrations.form.chargePositive_button_label' %>"/>
				</div>
				<div class="form-group">
						<label>Enter a charge with a negative amount</label><br/>
              			<input name="negative_payment" class="button" type="submit" value="<%= t 'registrations.form.chargeNegative_button_label' %>"/>
				</div>
				
				<div class="inline">
				    <noscript>
				        <%= content_tag :p, t('registrations.back_link_unavailable') %>
				    </noscript>
				    <%= link_to t('registrations.form.back_button_label'), :paymentstatus, :class => 'link_to' %>
				</div>
				
				<br/>
				<br/>
				
			</fieldset>
			
        </div>	
      <% end %>
      </div>
      </div>
    </section>

    <aside role='note'>
      <div class="inner">
        <div class="col-2">
         <%= render "shared/current_user" %>
        </div>
      </div>
    </aside>

	</article>
</main>