<%= render 'shared/content_for_pages' %>

<div id="wrapper">

<main id="content" role="main" class="group">

<div class="back-section">
    <ol>
      <li>
        <noscript>
            <%= content_tag :p, t('registrations.back_link_unavailable') %>
        </noscript>
        <%= link_to t('registrations.form.back_button_label'), :paymentstatus, :class => 'link_to' %>
      </li>
    </ol>
</div>

  <header class="page-header group">
    <div class="hgroup">
        <h1 class="heading-large"><%= t '.heading' %></h1>
        <div class="form-hint"><%= t '.step' %></div>
    </div>
  </header>

  <div class="grid-wrapper">

	  <% content_for :page_title, createTitle('.heading') %>

	  <!-- Usefull for showing default messages -->
	  <% if alert %><%= alert %><% end %>

	  <%= form_tag do %>

		<!-- WF X.X.X -->
		<div id="charge-index" data-journey="waste-carriers-registration:charge-index"></div>

    <div class="grid-2-3">
      <div class="inner-block">

			<fieldset id="charge-adjustments-page">
				<legend></legend>

				<div class="form-group">
						<p class="text"><%= t '.page_guidance' %></p>
				</div>

				<div class="form-group">
						<label class="form-label"><%= t '.positive_charge' %></label>
						<input name="positive_payment" class="button" type="submit" value="<%= t 'registrations.form.chargePositive_button_label' %>"/>
				</div>

				<div class="form-group">
						<label class="form-label"><%= t '.negative_charge' %></label>
            <input name="negative_payment" class="button" type="submit" value="<%= t 'registrations.form.chargeNegative_button_label' %>"/>
				</div>

		  </fieldset>

      <% end %>
    </div>
    </div><!-- end grid-2-3 -->

    <div class="grid-1-3">
      <div class="inner-block related">
        <div class="inner group related-subsection">
          <h2 class="heading-small"><%= t 'registrations.form.currentUser' %></h2>
            <nav aria-labelledby="parent-subsection" role="navigation">
              <ul>
                <li><%= render "shared/current_user" %></li>
              </ul>
            </nav>
          </div>
        </div>
      </div><!-- end grid 1-3-->

    </div><!-- end grid-wrapper -->

  </main><!-- end main -->
</div><!-- end wrapper -->
