<%= render 'shared/content_for_pages' %>

<div id="wrapper">

<main id="content" role="main" class="group">

<div class="back-section">
    <ol>
      <li>
        <noscript>
          <%= content_tag :p, t('registrations.back_link_unavailable') %>
        </noscript>
        <%= link_to t('registrations.form.back_to_status_button_label'), :paymentstatus, :class => 'link_to' %>
      </li>
    </ol>
</div>

<header class="page-header group">
  <div class="hgroup">
      <h1 class="heading-large">You have selected manual refund</h1>
  </div>
</header>

<div class="grid-wrapper">

<div class="grid-2-3">
  <div class="inner-block">

    <% content_for :page_title, createTitle('.heading') %>

    <!-- Usefult for showing default messages -->
    <% if alert %><%= alert %><% end %>

  	<p>This page is a W.I.P.</p>

  	<p>The system has been updated to reflect that a refund has been made.</p>

  	<p>Please follow external guidance as to how to complete a refund form.</p>


    </div><!-- end inner-block -->
  </div><!-- end grid 1-3-->

  <div class="grid-1-3">
    <div class="inner-block related">
      <div class="inner group related-subsection">
        <h2 class="heading-small">Current user</h2>
          <nav aria-labelledby="parent-subsection" role="navigation">
            <ul>
              <li><%= render "shared/current_user" %></li>
            </ul>
          </nav>
        </div>
      </div><!-- end inner-block related -->
    </div><!-- end grid 1-3-->

    </div><!-- end grid-wrapper -->

  </main><!-- end main -->
</div><!-- end wrapper -->