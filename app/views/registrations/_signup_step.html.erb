  <%= render "errors" %>

<!-- WF 4.3.4 -->
<div id="page4">
<h2>Sign up and register</h2>
<fieldset>
<legend>User details</legend>
<div id="summary">
<p>Registering <%=@registration.contactEmail%></p>
<p><%=@registration.companyName%></p>
</div>
</fieldset>

<fieldset>

<% if user_signed_in? %>
<legend>User Account</legend>

<p>You are currently logged in as <strong><%= current_user.email %></strong>, it is this account that will be associated with this registration.</p>
<p>If this is not the case, Click here to <%= link_to "logout and start again", destroy_user_session_path, :method => :delete, :class => 'navbar-link'  %>.</p>

<%# f.text_field :sign_up_mode, :class => "js-hidden" %>

<% else %>
<legend>User Registration</legend>

<p class="group<%if @registration.errors[:sign_up_mode].any?%> validation<%end%>">
    <%= f.label :sign_up_mode, "Sign up or sign in" %>
    <%= f.select :sign_up_mode, options_for_select([["Please select...",""],["Sign up (new e-mail)","sign_up"],["Sign in (existing e-mail)","sign_in"]],f.object.sign_up_mode) %>
</p>

<p class="group js-hidden<%if @registration.errors[:accountEmail].any?%> validation<%end%>">
    <%= f.label :accountEmail, "E-mail" %>
    <%= f.email_field :accountEmail, :autofocus => true %>
</p>
<p class="group js-hidden<%if @registration.errors[:password].any?%> validation<%end%>">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
</p>
<p class="group js-hidden<%if @registration.errors[:password_confirmation].any?%> validation<%end%>">
    <%= f.label :password_confirmation, "Confirm password" %>
    <%= f.password_field :password_confirmation %>
</p>

<% end %>

</fieldset>

</div>
<p class="action group">
<input name="back" class="button-secondary" type="submit" value="Back"/>
<input name="register" class="button" type="submit" value="Register"/>
</p>