<% if @registration.errors.any? %>
    <% full_messages = one_full_message_per_invalid_attribute(@registration) %>
    <div id="error_explanation" class="validation-summary">
      <h2 class="heading-medium"><%= t '.errorMessage', :count => pluralize(full_messages.count, t('.error')) %></h2>
        <% full_messages.each do |msg| %>
        <ul>
            <li><a class="error-text" href="#registration_<%= msg %>"><%= msg %></a></li>
        </ul>
        <% end %>
    </div>
  <% end %>