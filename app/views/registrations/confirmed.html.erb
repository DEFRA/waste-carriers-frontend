<%= render 'shared/content_for_pages' %>

<% content_for :page_title, createTitle('.title') %>

<main id="content" role="main" class="group">
<article role="article" class="group">
 <section>
    <div class="inner">
    <div class="col-1">

	<!--<h1><%= t 'registrations.form.title' %></h1>-->
    <% if @tell_waste_carrier_they_are_pending_convictions_check %>
        <p><%= t '.pending_convictions_check' %></p>
    <% else %>
	<div class='complete-container'>
		<h1 class="subtitle"><%= t '.heading' %></h1>
	</div>
	<h2 class="registered"><%= t '.yourRegNumber', :reg => @registration.regIdentifier %></h2>
	<%# render "shared/meta_phases"%>

	<% isRegisteredMessageKey = @registration.lower? ? 'registrations.print.isRegisteredAsLower' : 'registrations.print.isRegisteredAsUpper' %>
	<h3 class="registered"><%= t isRegisteredMessageKey, :companyName => @registration.companyName %></h3>


	<!--<h2><%= t '.yourRegNumber', :reg => @registration.regIdentifier %></h2>-->

	<div id="wrapper" data-journey="waste-carriers-registration:confirmed"></div>

	<form action="<%=print_confirmed_url%>">
	<div class="action group">
  		<% if can? :print, @registration %>
			<p><%= link_to t('registrations.form.print_button_label'), print_confirmed_url, :class => 'link-button-secondary' %></p>
  		<% end %>
	</div>

	<p><%= t '.detailsEmailed', :email => @registration.accountEmail %></p>

	<div class="finish-section js-hidden"  data-journey="waste-carriers-registration:finish">
	<%# render "details" %>
	</div>
    <% end %>

	<p><%= t '.detailsChange' %></p>
    <% if @owe_money %>
      <p><%= t '.payment_pending' %></p>
    <% end %>

	<div class="action group"><input name="finish" class="button" type="submit" value="<%= t 'registrations.form.finish_button_label' %>"/></div>

	<!--<p><%# t '.problems_html', :email => Rails.configuration.registrations_service_email, :subject => 'Digital%20Assistance%20Request' %></p>-->

	</form>
    </div>
  </div>
</section>
</article></main>