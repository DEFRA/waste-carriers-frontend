<%= render 'shared/content_for_pages' %>

<div id="wrapper">

  <main id="content" role="main" class="group">

  <div class="back-section">
    <ol>
      <li><%= render 'back_link' %></li>
    </ol>
  </div>

  <%= render 'errors' %>
  <header class="page-header group">
    <div class="hgroup">
      <h1 class="heading-medium"><%= t '.legend' %></h1>
    </div>
  </header>

  <div class="inline">
    <ul>
      <li><a href="/your-registration/signin"><%= t '.sign_in_link'%></a></li>
    <ul>
  </div>

	<!-- WF 4.3.4 -->
	<div id="page4"  data-journey="waste-carriers-registration:signup">
    <% content_for :page_title, createTitle('.title') %></div>
		<%= form_for(@registration, :url => newSignup_path) do |f| %>
      <fieldset>
        <legend></legend>
        <div class="form-group <%if @registration.errors[:accountEmail].any?%> validation<%end%>">
          <ul>
            <li><%= validation_for(@registration, :accountEmail) %></li>
            <li><%= f.label :accountEmail, class: 'form-label' %>
            <%= f.email_field :accountEmail, :autofocus => true %></li>
          </ul>
        </div>
        <div class="form-group <%if @registration.errors[:accountEmail_confirmation].any?%> validation<%end%>">
          <ul>
            <li><%= validation_for(@registration, :accountEmail_confirmation) %></li>
            <li><%= f.label :accountEmail_confirmation, class: 'form-label' %>
            <%= f.email_field :accountEmail_confirmation %></li>
          </ul>
        </div>
        <div class="form-group <%if @registration.errors[:password].any?%> validation<%end%>">
          <ul>
            <li><%= validation_for(@registration, :password) %></li>
            <li><%= f.label :password, t('.createPassword'), class: 'form-label' %>
            <%= f.password_field :password %></li>
            <!-- Restored the original strength line for debugging purposes -->
            <!-- The script currently assumes it should changes all siblings of registration_password to use its class. Which it was at the time.-->
            <!--<span class="strength_icon none">&#9650;<span class="strength_message"></span></span>-->
            <li><p class='form-hint text'>Password be at least 8 characters long and contain minimum 1 capital and minimum 1 number</p></li>
          </ul>
        </div>
        <div class="form-group <%if @registration.errors[:password_confirmation].any?%> validation<%end%>">
          <ul>
            <li><%= validation_for(@registration, :password_confirmation) %></li>
            <li><%= f.label :password_confirmation, class: 'form-label' %>
            <%= f.password_field :password_confirmation %></li>
        </ul>
        </div>
      </fieldset>

		 <%= render 'next_link' %>

 	<% end %>

  </main><!--content end-->
</div><!--wrapper end-->

