<%= render 'shared/content_for_pages' %>

<main id="content" role="main" class="group">
  <article role="article" class="group">

    <% content_for :page_title, createTitle('registrations.noregistration_step.title') %>
    <%= form_for(@registration, :url => newNoRegistration_path) do |f| %>

      <div class="step"><%= t 'registrations.noregistration_step.step' %></div>
      <h1 class="subtitle"><%= t 'registrations.noregistration_step.subtitle' %></h1>

      <%= render "noregistration_step", :f => f %>

    <% end %>

  </article>
</main>
