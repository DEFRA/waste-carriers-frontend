  	    <%= f.radio_button :isMainService, "yes", :class => "radio" %><%= f.label :isMainService_yes, :class => "label" %>
  	  </span>
    </p>
  </fieldset>


</div>

<p class="action group">
  <%= link_to t('registrations.form.back_button_label'), newOtherBusinesses_path, :class => 'button-secondary' %>
