<% content_for :page_title, createTitle('.business_or_org_details') %>

<%= render "shared/progress", size: "10%" %>

<%= render "errors" %>

<!-- WF 4.3.1 -->
<div id="page1" data-journey="waste-carriers-registration:serviceprovided">


  <!-- Smart Answers
    Whose waste do you deal with?
   -->
  <fieldset>
    <legend><span><%= t 'activemodel.attributes.discover.isMainService'%></span></legend>
    <p class="group<%if @registration.errors[:isMainService].any?%> validation<%end%>">
      <span class="inline"><!-- GDS have an 'option' class but we prefer this simplified version -->
