<%= render 'shared/content_for_pages' %>
<div id="wrapper">

  <main id="content" role="main" class="group">

    <% content_for :page_title, createTitle('.title') %>
    <%= form_for(@registration, url: print_url(:id => @registration.id)) do |f| %>
    <% isRegisteredMessageKey = @registration.lower? ? 'registrations.print.isRegisteredAsLower' : 'registrations.print.isRegisteredAsUpper' %>

    <!-- Header section -->
    <header class="page-header group">
      <div class="hgroup">
        <h1 class="heading-medium"><%= t isRegisteredMessageKey, :companyName => @registration.companyName %></h1>
      </div>
    </header>

    <div class="grid-2-3">

    <!-- Address section -->
    <div class="print-section"  data-journey="waste-carriers-registration:print">
      <%= render "address_display", r: @registration, :newline=>true%>
    </div>

    <!-- Registration section -->
    <div class="registration-details">
      <ul>
        <li><%= render "details", :f => f %></li>
        <li><%= t 'registrations.finish.your_reg_number', :reg => @registration.regIdentifier %></li>
          <% case  session[:edit_mode].to_i %>
          <% when RegistrationsController::EditMode::RENEWAL %>
          <%= format_date(@registration.metaData.first.dateRegistered) %>
          <% when RegistrationsController::EditMode::RECREATE %>
          <% when RegistrationsController::EditMode::EDIT %>
          <% else %>  <!-- this is a new registration page -->
        <li><%=t '.registeredOn',:date=>@registration.formatted_registration_date %></li>
          <% end %>
        <li><%= t '.proof' %></li>
      </ul>
    </div>

    <div class="assisted-digital">
      <ul>
        <% if @registration.assisted_digital? %>
        <li><%= t '.accessCode_html', :code => @registration.accessCode %></li>
          <% end %>
      </ul>
      <ul>
        <li><%=t 'registration_mailer.welcome_email.renewal_html'%></li>
          <% if !@registration.assisted_digital? %>
        <li><%=t '.website_html'%></li>
          <% else %>
        <li><%=t '.calling'%></li>
        <% end %>
      </ul>
    </div>

    <!-- EA contact details -->
    <div class="ea-contact">
      <ul>
        <li><%= t '.enquiries'%></li>
        <li><%=t '.telephone'%>: <%= Rails.configuration.registrations_service_phone %></li>
        <li><%=t '.email'%>: <%= Rails.configuration.registrations_service_email %></li>
      </ul>
    </div>


    <!-- Lower tier registration -->
    <div class="finish-section">
    <h3 class="heading-small"><%=t '.lowerTierRegistration'%></h3>
    <p><%=t '.criteriaIntro'%></p>
      <ul class="list-bullets">
        <li><%=t '.criteria1'%></li>
        <li><%=t '.criteria2'%></li>
        <li><%=t '.criteria3'%></li>
        <li><%=t '.criteria4'%></li>
      </ul>
    </p>
    </div>

     <!-- Responsibilites section -->
    <div class="finish-section">
    <h3 class="heading-small"><%=t '.responsibilitiesHeading'%></h3>
    <p><%=t '.responsibilitiesIntro'%></p>
      <ul class="list-bullets">
        <li><%=t '.responsibilities1'%></li>
        <li><%=t '.responsibilities2'%></li>
        <li><%=t '.responsibilities3'%></li>
        <li><%=t '.responsibilities4'%></li>
      </ul>
    </div>


    <!-- Print section -->
    <div class="print-section">
      <!--
      <input name="from" type="hidden" value="<%= flash[:alert] %>"/>
      <input name="back" class="button-secondary" type="submit" value="<%= t 'registrations.form.back_button_label' %>"/>
      -->

      <!-- Back button section -->
      <%= link_to t('registrations.form.back_button_label'), :back, :class => 'link-button-secondary' %>
      <% if session[:edit_mode].to_i  ==  RegistrationsController::EditMode::RENEWAL  %>
      <%= link_to t('registrations.form.finish_button_label'), action: "finish_renewal", :class => 'link-button-secondary' %>
       <% end %>
    </div>

  <% end %>

  </div><!--end grid-2-3 -->
</main><!-- end main -->
</div><!-- end wrapper -->
