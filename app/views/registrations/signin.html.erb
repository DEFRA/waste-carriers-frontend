<%= render 'shared/content_for_pages' %>

<div id="wrapper">
<main id="content" role="main" class="group">

  <div class="back-section">
    <ol>
      <li><%= render 'back_link' %></li>
    </ol>
  </div>

  <%= render 'errors' %>
    <header class="page-header group">
      <div class="hgroup">
        <h1 class="heading-xlarge" id="groupLabel"><%= t '.legend' %></h1>
          <ul>
            <li><%= link_to t('.sign_up_link'), signup_path %></li>
          <ul>
      </div>
    </header>

    <% if notice %>
    <div id="notice_explanation" class="note-summary text">
      <ul>
        <li><%= notice %></li>
        <li><%= t '.keep_window_open' %></li>
      </ul>
    </div>
    <% end %>


    <!-- WF 4.3.4 -->
    <div id="page4"  data-journey="waste-carriers-registration:signin"></div>
    <% content_for :page_title, createTitle('.title') %>

    <div class="form-group" role="group" aria-labelledby="groupLabel">
      <%= form_for(@registration, :url => signin_path, html: {autocomplete: 'off'}) do |f| %>
        <div class="form-group <%if @registration.errors[:accountEmail].any?%> validation<%end%>" id="registration_accountEmail" role="group" aria-labelledby="groupLabel">
          <%= validation_for(@registration, :accountEmail) %>
          <%= f.label :accountEmail, class: 'form-label' %>
          <%= f.email_field :accountEmail, class: 'form-control-1-2', :autofocus => true %>
        </div>

        <div class="form-group <%if @registration.errors[:password].any?%> validation<%end%>" id="registration_password" role="group" aria-labelledby="groupLabel">
          <%= validation_for(@registration, :password) %>
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control-1-2' %>
        </div>

        <%= render 'continue_link' %>
      <% end %>
    </div>

    <%= render partial: 'shared/sign_in_help', locals: { resource_name: :user, registration_in_progress: true } %>

  </main><!-- end main -->
</div><!-- end wrapper -->
