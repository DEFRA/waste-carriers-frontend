<%= render 'shared/content_for_pages' %>

<main id="content" role="main" class="group">
  <article role="article" class="group">

    <% content_for :page_title, createTitle('registrations.convictions_step.title') %>
    <%= form_for(@registration, :url => newRelevantConvictions_path) do |f| %>

        <p class="back_link"><%= render 'back_link' %></p>
        <div class="step"><%= t 'registrations.convictions_step.step' %></div>

        <%= render "convictions_step", :f => f %>

    <% end %>

  </article>
</main>