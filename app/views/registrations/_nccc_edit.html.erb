
<%= render "errors" %>
  
<% if params[:note] %>
<div id="note_explanation" class="note-summary">
  <h1><%= params[:note]%></h1>
</div>
<% end %>

<!-- WF 4.3.1 -->
<div id="page1">

<fieldset>
<legend>Business or organisation details</legend>

<p class="group<%if @registration.errors[:businessType].any?%> validation<%end%>">
<%= f.label :businessType, "Business or organisation type" %>
<%= f.select :businessType, options_for_select([["Please select...",""],["Sole trader","soleTrader"],["Partnership","partnership"],["Limited company","limitedCompany"],["Charity or voluntary organisation","charity"],["Waste collection authority","collectionAuthority"],["Waste disposal authority","disposalAuthority"],["Waste regulation authority","regulationAuthority"]],f.object.businessType) %>
</p>


<p class="group<%if @registration.errors[:companyName].any?%> validation<%end%>">
<%= f.label :companyName, "Business, organisation or trading name" %>
<%= f.text_field :companyName%>
</p>

</fieldset>

</div>

<!-- WF 4.3.2 -->
<div id="page2">

<h2>Address and contact details</h2>

<fieldset>
<legend>Main business, organisation or trading address</legend>

