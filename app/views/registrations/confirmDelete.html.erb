<main id="content" role="main" class="group">
<article role="article" class="group">

<h1>Confirm delete registration</h1>

<%= form_for @registration, :method => 'delete' do |f| %>

  <p>Are you sure that you want to delete registration <b><%= @registration.companyName %></b>?</p>
