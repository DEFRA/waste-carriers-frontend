<%= render 'shared/content_for_pages' %>

<div id="wrapper">

  <main id="content" role="main" class="group">

    <div class="back-section">
        <ol>
          <li><%= render 'back_link' %></li>
        </ol>
    </div>

    <header class="page-header group">
      <div class="hgroup">
          <h1 class="heading-large"><%= t '.title'%></h1>
      </div>
    </header>

  <% content_for :page_title, createTitle('.title') %>

    <%= form_for @registration, :method => 'delete' do |f| %>

    <p><%=t '.message_html',:companyName=>@registration.companyName %></p>

    <div class="action group">
      <input id="delete" name="delete" class="button delete" type="submit" value="<%=t '.deleteLabel'%>"/>
    </div>

  <% end %>

  </main><!-- end main -->
</div><!-- end wrapper -->
