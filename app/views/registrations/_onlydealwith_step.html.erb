<!-- WF 4.3.1 -->
<div id="page5" data-journey="waste-carriers-registration:onlydealwith">

  <!-- Smart Answers
    Do you only deal with the following waste: animal by-products, waste from a mine or quarry, or farm or agricultural waste
   -->
  <%= render "errors" %>
  <header class="page-header group">
      <div class="hgroup">
        <h1 class="heading-medium"><%= t 'registrations.onlydealwith_step.subtitle' %></h1>
      </div>
  </header>

  <fieldset>
    <legend></legend>
      <div class="form-group<%if @registration.errors[:onlyAMF].any?%> validation<%end%>">
        <ul>
          <li><%= validation_for(@registration, :onlyAMF) %></li>
    	    <li class="inline"><%= f.label :yes_option_label, for: "registration_onlyAMF_yes", :class => "block-label" do %>
            <%= f.radio_button :onlyAMF, "yes", :class => "radio" %>
            <%= t 'form.yes_option_label' %>
            <% end %>
          </li>
          <li class="inline"><%= f.label :yes_option_label, for: "registration_onlyAMF_no", :class => "block-label" do %>
            <%= f.radio_button :onlyAMF, "no", :class => "radio" %>
            <%= t 'form.no_option_label' %>
      	    <% end %>
          </li>
        </ul>
      </div>
  </fieldset>
<div class="next_link"><%= render 'next_link' %></div>
</div>


