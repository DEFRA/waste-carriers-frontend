<fieldset>
  <legend><%= t '.legend' %></legend>
  <h2><%= t '.subtitle' %></h2>
  <div class="form-group<%if r.errors[:firstName].any?%> validation<%end%>">
    <%= validation_for(r, :firstName) %>
    <%= f.label :firstName, class: 'form-label' %>
    <%= f.text_field :firstName, :size => 20, :maxlength => 35 %>
  </div>
  <div class="form-group<%if r.errors[:lastName].any?%> validation<%end%>">
    <%= validation_for(r, :lastName) %>
    <%= f.label :lastName, class: 'form-label' %>
    <%= f.text_field :lastName, :size => 20, :maxlength => 35 %>
  </div>
  <div class="form-group<%if r.errors[:position].any?%> validation<%end%>">
    <%= validation_for(r, :position) %>
    <%= f.label :position, class: 'form-label' %>
    <%= f.text_field :position, :size => 20, :maxlength => 35 %>
  </div>
  <div class="form-group<%if r.errors[:phoneNumber].any?%> validation<%end%>">
    <%= validation_for(r, :phoneNumber) %>
    <%= f.label :phoneNumber, class: 'form-label' %>
    <%= f.telephone_field :phoneNumber, :size => 20, :maxlength => 20 %>
  </div>
  <div class="form-group<%if r.errors[:contactEmail].any?%> validation<%end%>">
    <%= validation_for(r, :contactEmail) %>
    <%= f.label :contactEmail, class: 'form-label' %>
    <%= f.email_field :contactEmail, :size => 20, :maxlength => 70 %>
  </div>
</fieldset>
