<%= render 'shared/content_for_pages' %>

<div id="wrapper">

  <main id="content" role="main" class="group">

  <div class="back-section">
    <ul>
      <li><%= render 'back_link' %></li>
    </ul>
  </div>

  <%= render 'shared/errors' %>
  <header class="page-header group">
    <div class="hgroup">
      <h1 class="heading-xlarge" id="groupLabel"><%= t '.legend' %></h1>
      <h2 class="panel-medium"><%= t '.subtitle' %></h2>
      <p class="panel-indent"><%= t '.text1' %></p>
    </div>
  </header>

  <div class="text">
    <ul>
      <li><a href="/your-registration/signin"><%= t '.sign_in_link'%></a></li>
    </ul>
  </div>

	<!-- WF 4.3.4 -->
	<div id="page4" data-journey="waste-carriers-registration:signup">
    <% content_for :page_title, createTitle('.title') %></div>
		<%= form_for(@registration, :url => newSignup_path, html: {autocomplete: 'off'}) do |f| %>

        <div class="form-group text <%if @registration.errors[:accountEmail].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel" id="registration_accountEmail">
            <%= validation_for(@registration, :accountEmail) %>
            <%= f.label :accountEmail, class: 'form-label' %>
            <%= f.email_field :accountEmail, class: 'form-control-1-2', :autofocus => true %>
        </div>
        <div class="form-group text <%if @registration.errors[:accountEmail_confirmation].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel" id="registration_accountEmail_confirmation">
            <%= validation_for(@registration, :accountEmail_confirmation) %>
            <%= f.label :accountEmail_confirmation, class: 'form-label' %>
            <%= f.email_field :accountEmail_confirmation, class: 'form-control-1-2' %>
        </div>
        <div class="form-group text <%if @registration.errors[:password].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel" id="registration_password">
            <%= validation_for(@registration, :password) %>
            <%= f.label :password, t('.createPassword'), class: 'form-label' %>
            <p class='form-hint text'><%= t '.password_hint' %></p>
            <%= f.password_field :password, class: 'form-control-1-2' %>
        </div>

        <div class="form-group text<%if @registration.errors[:password_confirmation].any?%> validation<%end%>" role="group" aria-labelledby="groupLabel" id="registration_password_confirmation">
          <%= validation_for(@registration, :password_confirmation) %>
          <%= f.label :password_confirmation, class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control-1-2' %>
           <div class="block"><%= render 'shared/registration_continue_link' %></div>
        </div>

 	<% end %>

  </main><!--content end-->
</div><!--wrapper end-->

