<% if @registration.errors.any? %>
    <div id="error_explanation" class="validation-summary">
      <h2 class="heading-medium"><%= t '.errorMessage', :count => pluralize(@registration.errors.count, t('.error')) %></h2>
      <% @registration.errors.each do |error| %>
      <ul>
        <li class="error-text" href="#registration_<%= error %>"><%= @registration.errors.full_messages_for(error).first %></li>
      </ul>
      <% end %>
    </div>
  <% end %>
