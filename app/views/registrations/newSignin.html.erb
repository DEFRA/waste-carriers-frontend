<%= render 'shared/content_for_pages' %>

<div id="wrapper">

<main id="content" role="main" class="group">

<div class="back-section">
    <ol>
      <li><%= render 'back_link' %></li>
    </ol>
</div>

<header class="page-header group">
    <div class="hgroup">
        <h1 class="heading-large"><%= t '.legend' %></h1>
    </div>
</header>

    <section>
          <!-- WF 4.3.4 -->
          <div id="page4"  data-journey="waste-carriers-registration:signin">
            <% content_for :page_title, createTitle('.title') %>
            <%= form_for(@registration, :url => newSignin_path) do |f| %>
              <fieldset>
                <legend></legend>
                <%= render 'errors' %>
                <div class="form-group <%if @registration.errors[:accountEmail].any?%> validation<%end%>">
                  <%= validation_for(@registration, :accountEmail) %>
                  <%= f.label :accountEmail, class: 'form-label' %>
                  <%= f.email_field :accountEmail, :autofocus => true %>
                </div>
                <div class="form-group <%if @registration.errors[:password].any?%> validation<%end%>">
                  <%= validation_for(@registration, :password) %>
                  <%= f.label :password, class: 'form-label' %>
                  <%= f.password_field :password %>
                </div>
              </fieldset>
              <div class='link_margin'>
                <a href="/your-registration/signup"><%= t '.sign_up_link'%></a>
              </div>
              <span class="next_link"><%= render 'next_link' %></span>
            <% end %>
          </div>
    </section>

  </main><!-- end main -->
</div><!-- end wrapper -->

