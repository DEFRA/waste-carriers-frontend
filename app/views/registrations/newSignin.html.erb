<%= render 'shared/content_for_pages' %>

<div id="wrapper">

<main id="content" role="main" class="group">

<div class="back-section">
    <ol>
      <li><%= render 'back_link' %></li>
    </ol>
</div>

<%= render 'errors' %>
<header class="page-header group">
    <div class="hgroup">
        <h1 class="heading-large"><%= t '.legend' %></h1>
    </div>
</header>

  <!-- WF 4.3.4 -->
  <div id="page4"  data-journey="waste-carriers-registration:signin">
    <% content_for :page_title, createTitle('.title') %>
    <%= form_for(@registration, :url => newSignin_path, html: {autocomplete: 'off'}) do |f| %>
      <fieldset>
        <legend></legend>
        <div class="form-group <%if @registration.errors[:accountEmail].any?%> validation<%end%>">
          <ul>
            <li><%= validation_for(@registration, :accountEmail) %></li>
            <li><%= f.label :accountEmail, class: 'form-label' %>
            <%= f.email_field :accountEmail, :autofocus => true %></li>
          </ul>
        </div>
        <div class="form-group <%if @registration.errors[:password].any?%> validation<%end%>">
          <ul>
            <li><%= validation_for(@registration, :password) %></li>
            <li><%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password %></li>
          </ul>
        </div>
      </fieldset>
      <div class='inline'>
        <ul>
          <li><a href="/your-registration/signup"><%= t '.sign_up_link'%></a></li>
          <li class="next_link"><%= render 'next_link' %></li>
        </ul>
        <% end %>
      </div>

  </main><!-- end main -->
</div><!-- end wrapper -->

