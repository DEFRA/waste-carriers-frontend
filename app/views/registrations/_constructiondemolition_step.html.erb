<!-- WF 4.3.1 -->
<div id="page4" data-journey="waste-carriers-registration:constructiondemolition">

  <%= render "errors" %>
  <header class="page-header group">
      <div class="hgroup">
        <h1 class="heading-large" id="groupLabel"><%= t 'registrations.constructiondemolition_step.subtitle' %></h1>
      </div>
  </header>

  <fieldset>
    <legend></legend>

    <details class="text">
        <summary aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" aria-expanded="true" role="button">
          <span class='summary'><%= t 'registrations.constructiondemolition_step.explanation_link' %></span>
        </summary>
        <div style='display:block' class='panel-indent' id='details-content-0' >
          <p><%= t 'registrations.constructiondemolition_step.explanation' %></p>
          <p><%= t 'registrations.constructiondemolition_step.explanation2' %></p>
        </div>
    </details>

    <!-- <p><a href="?whatisconstruction=true"><%= t '.explanation_link'%></a></p> -->

    <div class="inline<%if @registration.errors[:constructionWaste].any?%> validation<%end%>" id="registration_constructionWaste" role="group" aria-labelledby="groupLabel">
        <%= validation_for(@registration, :constructionWaste) %>
  	    <div class='inline'><%= f.label :yes_option_label, for: "registration_constructionWaste_yes", :class => 'block-label' do %>
  	      <%= f.radio_button :constructionWaste, "yes", :class => "radio" %>
          <%= t 'form.yes_option_label' %>
          <% end %>
        </div>
        <div class="inline"><%= f.label :no_option_label, for: "registration_constructionWaste_no", :class => 'block-label' do %>
          <%= f.radio_button :constructionWaste, "no", :class => "radio" %>
          <%= t 'form.no_option_label' %>
  	      <% end %>
        </div>
    </div>

  </fieldset>
 <%= render 'next_link' %>
</div>