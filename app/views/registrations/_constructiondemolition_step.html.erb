<!-- WF 4.3.1 -->
<div id="page4" data-journey="waste-carriers-registration:constructiondemolition">

  <!-- Smart Answers
    Do you ever deal with construction or demolition waste
   -->
  <%= render "errors" %>
  <header class="page-header group">
      <div class="hgroup">
        <h1 class="heading-large"><%= t 'registrations.constructiondemolition_step.subtitle' %></h1>
      </div>
  </header>

  <fieldset>
    <legend></legend>
    <!-- <p><a href="?whatisconstruction=true"><%= t '.explanation_link'%></a></p> -->
    <div class="inline<%if @registration.errors[:constructionWaste].any?%> validation<%end%>">
      <ul>
        <li><%= validation_for(@registration, :constructionWaste) %></li>
  	    <li class='inline'><%= f.label :yes_option_label, for: "registration_constructionWaste_yes", :class => 'block-label' do %>
  	      <%= f.radio_button :constructionWaste, "yes", :class => "radio" %>
          <%= t 'form.yes_option_label' %>
          <% end %>
        </li>
        <li class="inline"><%= f.label :no_option_label, for: "registration_constructionWaste_no", :class => 'block-label' do %>
          <%= f.radio_button :constructionWaste, "no", :class => "radio" %>
          <%= t 'form.no_option_label' %>
  	      <% end %>
        </li>
      </ul>
    </div>

    <details class="text">
        <summary aria controls='details-content-0' tabindex='0'>
          <span class='summary'><%= t 'registrations.constructiondemolition_step.explanation_link' %></span>
        </summary>
        <div id='details-content-0' class='panel-indent' aria-expanded='true' style='display:block'>
          <p><%= t 'registrations.constructiondemolition_step.explanation' %></p>
        </div>
    </details>

  </fieldset>
 <%= render 'next_link' %>
</div>