  <header class="page-header group">
    <div class="hgroup">
      <h1 class="heading-large"><%= legend %></h1>
    </div>
  </header>

  <div class="form-group<%if d.errors[:first_name].any?%> validation<%end%>">
    <%= validation_for(d, :first_name) %>
    <%= f.label :first_name, class: 'form-label' %>
    <%= f.text_field :first_name, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
  </div>

  <div class="form-group<%if d.errors[:last_name].any?%> validation<%end%>">
    <%= validation_for(d, :last_name) %>
    <%= f.label :last_name, class: 'form-label' %>
    <%= f.text_field :last_name, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
  </div>

  <div class="form-group<%if d.errors[:position].any?%> validation<%end%>">
    <%= validation_for(d, :position) %>
    <%= f.label :position, class: 'form-label' %>
    <%= f.text_field :position, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
  </div>

  <div class="form-group<%if d.errors[:dob].any?%> validation<%end%>">
    <ul>
      <li>
        <%= f.label :dob, class: 'form-label' %>
      </li>
      <li class="form-hint">
        <%= t 'key_people.index.dob_guidance' %>
      </li>
      <li class='inline-date'>
        <%= f.label :dob_day, class: 'form-label' %>
        <%= f.text_field :dob_day, class: 'form-date-day', :size => 2, :maxlength => 2 %>
      </li>
      <li class='inline-date'>
        <%= f.label :dob_month, class: 'form-label' %>
        <%= f.text_field :dob_month, class: 'form-date-month', :size => 2, :maxlength => 2 %>
      </li>
      <li class='inline-date'>
        <%= f.label :dob_year, class: 'form-label' %>
        <%= f.text_field :dob_year, class: 'form-date-year', :size => 4, :maxlength => 4 %>
      </li>
    </ul>
  </div>
  <%= f.hidden_field :person_type, :value => 'RELEVANT' %>
