  <header class="page-header group">
    <div class="hgroup">
      <h1 class="heading-large"><%= legend %></h1>
    </div>
  </header>

<fieldset>
  <legend></legend>

  <div class='form-group'>
    <details class="text">
      <summary aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" aria-expanded="true" role="button">
        <span class='summary'><%= t '.relevant_people_page_guidance' %></span>
      </summary>
      <div style='display:block' class='panel-indent' id='details-content-0' >
        <ul class="list-bullet">
          <li><%= t '.relevant_people_bullet_1' %></li>
          <li><%= t '.relevant_people_bullet_2' %></li>
        </ul>
      </div>
    </details>
  </div>

  <br />
  <div class="form-group<%if d.errors[:first_name].any?%> validation<%end%>">
    <ul>
      <li><%= validation_for(d, :first_name) %></li>
      <li><%= f.label :first_name, class: 'form-label' %>
      <%= f.text_field :first_name, :size => 20, :maxlength => 35 %></li>
    </ul>
  </div>
  <div class="form-group<%if d.errors[:last_name].any?%> validation<%end%>">
    <ul>
      <li><%= validation_for(d, :last_name) %></li>
      <li><%= f.label :last_name, class: 'form-label' %>
      <%= f.text_field :last_name, :size => 20, :maxlength => 35 %></li>
    </ul>
  </div>
  <div class="form-group<%if d.errors[:position].any?%> validation<%end%>">
    <ul>
      <li><%= validation_for(d, :position) %></li>
      <li><%= f.label :position, class: 'form-label' %>
      <%= f.text_field :position, :size => 20, :maxlength => 35 %></li>
    </ul>
  </div>
  <div class="form-group<%if d.errors[:dob].any?%> validation<%end%>">
    <ul>
    <div class="form-label"><%= f.label :dob %><p class="form-hint"><%= t 'key_people.index.dob_hint' %></p></div>
      <li class='inline-date'>
        <%= f.label :dob_day, class: 'form-label' %>
        <%= f.text_field :dob_day, :size => 2, :maxlength => 2 %>
      </li>
      <li class='inline-date'>
        <%= f.label :dob_month, class: 'form-label' %>
        <%= f.text_field :dob_month, :size => 2, :maxlength => 2 %>
      </li>
      <li class='inline-date'>
        <%= f.label :dob_year, class: 'form-label' %>
        <%= f.text_field :dob_year, :size => 4, :maxlength => 4 %>
      </li>
      <li class="form-hint"><%= t 'key_people.index.dob_guidance' %></li>
   </ul>
  </div>
  <%= f.hidden_field :person_type, :value => 'RELEVANT' %>
</fieldset>
