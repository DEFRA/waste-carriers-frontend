<%= render 'shared/errors' %>
<header id="registration_key_people" class="page-header group">
    <div class="hgroup">
        <h1 class="heading-large"><%= legend %></h1>

        <% case @registration.businessType %>
          <% when 'soleTrader' %>
            <p class="subtitle"><%= t('key_people.key_person.sole_trader_helptext') %></p>
          <% when 'limitedCompany' %>
            <p class="subtitle"><%= t('key_people.key_people.all_directors_helptext') %></p>
            <p class="subtitle"><%= t('key_people.key_people.add_people_one_at_a_time') %></p>
            <p class="subtitle">
              <%= t('key_people.key_people.how_to_add_people_helptext', button_label: t('key_people.key_people.button_label_limited')) %>
            </p>
          <% when 'partnership' %>
            <p class="subtitle"><%= t('key_people.key_people.all_partners_helptext') %></p>
            <p class="subtitle"><%= t('key_people.key_people.add_people_one_at_a_time') %></p>
            <p class="subtitle">
              <%= t('key_people.key_people.how_to_add_people_helptext', button_label: t('key_people.key_people.button_label_partner')) %>
            </p>
          <% when 'publicBody' %>
            <p class="subtitle"><%= t('key_people.key_people.chief_execs_helptext') %></p>
            <p class="subtitle">
              <%= t('key_people.key_people.chief_execs_how_to_add_many', button_label: t('key_people.key_people.button_label_public')) %>
            </p>
        <% end %>
    </div>
</header>

  <div class="form-group<%if d.errors[:first_name].any?%> validation<%end%>">
    <%= validation_for(d, :first_name) %>
    <%= f.label :first_name, class: 'form-label' %>
    <%= f.text_field :first_name, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
  </div>

  <div class="form-group<%if d.errors[:last_name].any?%> validation<%end%>">
    <%= validation_for(d, :last_name) %>
    <%= f.label :last_name, class: 'form-label' %>
    <%= f.text_field :last_name, class: 'form-control-1-2', :size => 20, :maxlength => 35 %>
  </div>

  <div id="key_person_dob" class="form-group inline-date<%if d.errors[:dob].any?%> validation<%end%>">
    <ul>
      <li><%= validation_for(d, :dob) %></li>
      <li class="form-label"><%= f.label :dob %>
        <p class="form-hint"><%= t 'key_people.index.dob_guidance' %></p>
      </li>
      <li class='inline-date'>
        <%= f.label :dob_day, class: 'form-label' %>
        <%= f.text_field :dob_day, class: 'form-date-day', :size => 2, :maxlength => 2 %>
      </li>
      <li class='inline-date'>
        <%= f.label :dob_month, class: 'form-label' %>
        <%= f.text_field :dob_month, class: 'form-date-month', :size => 2, :maxlength => 2 %>
      </li>
      <li class='inline-date'>
        <%= f.label :dob_year, class: 'form-label' %>
        <%= f.text_field :dob_year, class: 'form-date-year', :size => 4, :maxlength => 4 %>
      </li>
    </ul>
  </div>
  <%= f.hidden_field :position, :value => legend.sub!(' details', '') %>
  <%= f.hidden_field :person_type, :value => 'KEY' %>
