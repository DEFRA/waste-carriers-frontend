<%= render 'shared/content_for_pages' %>

<div id="wrapper">

  <main id="content" role="main" class="group">

    <header class="page-header group">
      <div class="hgroup">
        <h1 class="heading-xlarge">Waste Carriers Registration Service</h1>
        <h2 class="heading-medium">Development page</h2>
      </div>
    </header>

  <div class="grid-wrapper">

    <div class="grid-2-3">
      <div class="inner-block">

        <p class="panel-indent">You are seeing this page because the application is deployed in development mode users in the production environment will be redirected to the "Find out if I need to register" page
        </p>

        <% if alert %>
          <div id="error_explanation" class="validation-summary">
            <h2 class="heading-small"><%= t '.standard_error' %></h2>
            <ul>
            <li><%= alert %></li>
            </ul>
          </div>
        <% end %>

        <% if notice %>
          <div id="notice_explanation" class="validation-summary">
            <!--
            <h2><%= t '.standard_error' %></h2>
            -->
            <ul>
              <li><%= notice %></li>
            </ul>
          </div>
        <% end %>

        <h2 class="heading-small">Waste Carrier Entry points (typically redirected from GOV.UK)</h2>
          <ul>
            <li><a href='<%= start_path %>'>New or Renew</a> (Start page)</li>
            <li><a href='<%= new_user_session_path %>'>Waste Carrier Login</a></li>
            <li><a href='<%= public_path %>'>Public Register</a></li>
          </ul>

        <h2 class="heading-small">NCCC Entry points</h2>
          <ul>
            <li><a href='<%= new_agency_user_session_path %>'>Agency/NCCC Login </a></li>
          </ul>

        <h2 class="heading-small">Administration Entry points</h2>
          <ul>
            <li><a href='<%= new_admin_session_path %>'>Administration Login </a></li>
          </ul>
      </div>
    </div><!--grid-2-3 end-->

    <div class="grid-1-3">
    </div><!-- end grid-1-3 -->

  </div><!-- end grid wrapper -->

</main><!-- end content -->
</div><!-- end wrapper -->
