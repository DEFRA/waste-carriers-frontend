<head>
  <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
  <meta content="utf-8" http-equiv="encoding">
    <!-- Use title if it's in the page YAML frontmatter -->
  <title>Waste Carriers Service</title>
</head>

<body style="font-family: Helvetica, Arial, sans-serif;font-size: 16px;margin: 0;color:#0b0c0c">
<table width="100%" cellpadding="0" cellspacing="0" border="0">
  <tr>
    <td width="100%" height="53px" bgcolor="#0b0c0c">
      <table width="580" cellpadding="0" cellspacing="0" border="0" align="center">
        <tr>
          <td width="100%" bgcolor="#0b0c0c" valign="middle">
            <%= email_image_tag("govuk_logotype_email.png", {:alt => 'GOV.UK', :border => '0'}) %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<table width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="#FFFFFF">
  <tr>
    <td width="100%">
      <table width="580" cellpadding="0" cellspacing="0" border="0" align="center">
        <tr>
          <td width="100%" class="header" style="padding-top: 10px;" colspan="2">
            <table width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="#FFFFFF">
              <tr>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td width="75%" style="font-family: Helvetica, Arial, sans-serif;">
            <p style="font-weight: 700;font-size: 16px;line-height: 1 ;margin: 10px 0 10px 0;">&nbsp;</p>
          </td>
          <td width="25%">&nbsp;</td>
        </tr>
        <tr>
          <td width="75%" style="font-family: Helvetica, Arial, sans-serif;">

            <p class="font-size: 19px; line-height: 1.315789474;margin: 0 0 30px 0;" id="confirmation_instructions_email">
              <%= t 'devise.mailer.confirmation_instructions.paragraph1' %>
            </p>

            <p class="font-size: 19px; line-height: 1.315789474;margin: 0 0 30px 0;"><%= t 'devise.mailer.confirmation_instructions.paragraph2' %></p>


            <p class="font-size: 19px; line-height: 1.315789474;margin: 0 0 30px 0;"><%= t 'devise.mailer.confirmation_instructions.paragraph3' %></p>

            <% unless @resource.current_tier == 'UPPER' %>
              <p class="font-size: 19px; line-height: 1.315789474;margin: 0 0 30px 0;" id="lower_tier_text">
                <%= t 'devise.mailer.confirmation_instructions.paragraph4' %>
              </p>
            <% end %>

            <p class="font-size: 19px; line-height: 1.315789474;margin: 0 0 30px 0;"><%= t 'devise.mailer.confirmation_instructions.paragraph5' %></p>

            <% confirm_link = user_confirmation_url(confirmation_token: @token) %>

            <p style="font-size: 16px; color: #6f777b; line-height: 1.125; margin: 0 0 15px 0;">
              <%= link_to(confirm_link, confirm_link, id: 'confirmation_link') %>
            </p>

            <tr>
              <td align="left" width="75%" style="font-family: Helvetica, Arial, sans-serif;">
                <ul>
                  <li style="font-size: 16px; color: #6f777b; line-height: 1.125; margin: 0 0 15px 0;">
                    <%= t 'devise.mailer.confirmation_instructions.footer_1' %>
                  </li>
                  <li style="font-size: 16px; color: #6f777b; line-height: 1.125; margin: 0 0 15px 0;">
                    <%= t 'devise.mailer.confirmation_instructions.footer_2' %>
                  </li>
                </ul>
              </td>
            </tr>
          <td width="25%">&nbsp;</td>
        </tr>
      </table>
    </td>
  </tr>
</table>

</body>
</html>
