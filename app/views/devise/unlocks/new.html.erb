<%= render 'shared/content_for_pages' %>

<div id="wrapper">

  <main id="content" role="main" class="group">

  <div class="back-section">
    <ol>
      <li><%= link_to t('registrations.form.back_button_label'), :back %></li>
    </ol>
  </div>

  <header class="page-header group">
    <div class="hgroup">
      <h1 class="heading-large"><%=t 'devise.unlocks.resendUnlockInstructions'%></h1>
    </div>
  </header>

	<fieldset>
		<legend></legend>

			<div id="wrapper" data-journey="waste-carriers-registration:unlock-account"></div>

				<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :autocomplete => :off }) do |f| %>
  				<%= devise_error_messages! %>

  			<div class="form-group">
  				<%= f.label :email, class: 'form-label' %>
  				<%= f.email_field :email, class: 'form-control-1-2', :autofocus => true %>
  			</div>

  		<%= f.submit t('devise.unlocks.resendUnlockInstructions'), {:class => "button", :id => "send"} %>

		<% end %>
		</fieldset>

</main><!-- end content -->
</div><!-- end wrapper -->
