<%= render 'shared/content_for_pages' %>

<div id="wrapper">

<main id="content" role="main" class="group">

  <div class="back-section">
    <ol>
      <li><%= link_to t('registrations.form.back_button_label'), :back %></li>
    </ol>
  </div>
<%= devise_token_error_messages! %>
  <header class="page-header group">
    <div class="hgroup">
      <h1 class="heading-large"><%= t 'devise.confirmations.resendHeading'%></h1>
    </div>
  </header>

    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :autocomplete => :off }) do |f| %>

      <p class="text"><%= t 'devise.confirmations.resendText1'%></p>
      <p class="text"><%= t 'devise.confirmations.resendText2'%></p>
      <ul class="list-bullet text">
        <li><%= t 'devise.confirmations.resendBullet1'%></li>
        <li><%= t 'devise.confirmations.resendBullet2'%></li>
      </ul>
      <h2 class="heading-small"><%= t 'devise.confirmations.resendHeading2'%></h2>
      <ol class="list-number text">
        <li><%= t 'devise.confirmations.resendText3'%></li>
        <li><%= t 'devise.confirmations.resendText4'%></li>
      </ol>

    <div class="form-group">
	     <%= f.label :email, class: 'form-label' %>
	     <%= f.email_field :email, class: 'form-control-1-2', :autofocus => true %>
    </div>

	   <%= f.submit t('devise.confirmations.resendButton'), {:class => "button", :id => "resend"} %>

    <% end %>

  </main><!-- end content -->
</div><!-- end wrapper -->
