<%= render 'shared/content_for_pages' %>

<div id="wrapper">

<main id="content" role="main" class="group">

  <div class="back-section">
    <ol>
      <li><%= link_to t('registrations.form.back_button_label'), :back %></li>
    </ol>
  </div>

  <header class="page-header group">
    <div class="hgroup">
      <h1 class="heading-large"><%= t 'devise.confirmations.resendHeading'%></h1>
    </div>
  </header>


    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :autocomplete => :off }) do |f| %>
    <%= devise_token_error_messages! %>

    <div class="form-group">
     <p><%= t 'devise.confirmations.resendText'%></p>

       <details class="text">
        <summary aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" aria-expanded="true" role="button">
          <span class='summary'><%= t 'devise.confirmations.resendSummaryLink'%></span>
        </summary>
        <div style='display:block' class='panel-indent' id='details-content-0' >
          <p><%= t 'devise.confirmations.resendSummaryText'%></p>
        </div>
        </details>

	   <%= f.label :email, class: 'form-label' %>
	   <%= f.email_field :email, :autofocus => true %>
    </div>

	   <%= f.submit t('devise.confirmations.resendButton'), :class => "button" %>

    <% end %>


</main><!-- end content -->
</div><!-- end wrapper -->
