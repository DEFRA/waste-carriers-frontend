<% content_for :head do %><%= render "shared/head" %><% end %>
<% content_for :html_lang do %><%= render "shared/html_lang" %><% end %>
<% content_for :page_title do %><%= render "shared/page_title" %><% end %>
<% content_for :inside_header do %><%= render "shared/inside_header" %><% end %>
<% content_for :cookie_message do %><%= render "shared/cookie_message" %><% end %>
<% content_for :after_header do %><%= render "shared/after_header" %><% end %>
<% content_for :footer_top do %><%= render "shared/footer_top" %><% end %>
<% content_for :body_end do %><%= render "shared/body_end" %><% end %>

<% content_for :page_title, t('devise.sessions.title') %>

<main id="content" role="main" class="group"><article role="article" class="group">

<div id="wrapper" data-journey="waste-carriers-registration:sign-in"></div>

<h2><%= t '.sign_in_heading' %></h2>

<% if request.original_url.include? "agency_users/sign_in" %>
<h4><%= t '.agency_heading' %></h4>
<% elsif request.original_url.include? "admins/sign_in" %>
<h4><%= t '.admin_heading' %></h4>
<% end%>

<% if alert %>
<div id="error_explanation" class="validation-summary">
  <h2><%= t '.standard_error' %></h2>
  <ul>
    <li><%= alert %></li>
  </ul>
</div>
<% end %>

<% if notice %>
<div id="notice_explanation" class="note-summary">
  <h2><%= t '.standard_notice' %></h2>
  <ul>
    <li><%= notice %></li>
  </ul>
</div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p class="group<% if alert %> validation<% end %>"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :autocomplete => :off %></p>

  <p class="group<% if alert %> validation<% end %>"><%= f.label :password %>
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p class="group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p class="action group"><%= f.submit t('shared.current_user.sign_in'), :class => "button" %></p>
<% end %>

<%= render "devise/shared/links" %>

</article></main>
