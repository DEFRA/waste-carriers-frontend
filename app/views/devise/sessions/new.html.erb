<%= render 'shared/content_for_pages' %>

<% content_for :page_title, t('devise.sessions.title') %>

<main id="content" role="main" class="group"><article role="article" class="group">
<div id="wrapper" data-journey="waste-carriers-registration:sign-in"></div>
<fieldset>
<legend><%= t '.sign_in_heading' %></legend>

<% if request.original_url.include? "agency_users/sign_in" %>
<h3><%= t '.agency_heading' %></h3></br>
<% elsif request.original_url.include? "admins/sign_in" %>
<h3><%= t '.admin_heading' %></h3></br>
<% end%>

<% if alert %>
<div id="error_explanation" class="validation-summary">
  <h2><%= t '.standard_error' %></h2>
  <ul>
    <li><%= alert %></li>
  </ul>
</div>
<% end %>

<% if notice %>
<div id="notice_explanation" class="note-summary">
  <h2><%= t '.standard_notice' %></h2>
  <ul>
    <li><%= notice %></li>
  </ul>
</div>
<% end %>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-group<% if alert %> validation<% end %>"><%= f.label :email %>
  <%= f.email_field :email, class: 'form-label', :autofocus => true, :autocomplete => :off %></div>

  <div class="form-group<% if alert %> validation<% end %>"><%= f.label :password %>
  <%= f.password_field :password, class: 'form-label' %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="form-group"><%= f.submit t('shared.current_user.sign_in'), :class => "button" %></div>
<% end %>

</fieldset>

<%= render "devise/shared/links" %>

</article></main>
