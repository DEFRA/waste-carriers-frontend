<main id="content" role="main" class="group"><article role="article" class="group">

<h2><%= t '.sign_in_heading' %></h2>

<% if request.original_url.include? "agency_users/sign_in" %>
<h4><%= t '.agency_heading' %></h4>
<% elsif request.original_url.include? "admins/sign_in" %>
<h4><%= t '.admin_heading' %></h4>
<% end%>

<% if alert %>
<div id="error_explanation" class="validation-summary">
  <h2><%= t '.standard_error' %></h2>
  <ul>
    <li><%= alert %></li>
  </ul>
</div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p class="group<% if alert %> validation<% end %>"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></p>

  <p class="group<% if alert %> validation<% end %>"><%= f.label :password %>
  <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p class="group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p class="action group"><%= f.submit t('shared.current_user.sign_in'), :class => "button" %></p>
<% end %>

<%= render "devise/shared/links" %>

</article></main>
