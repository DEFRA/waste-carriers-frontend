<%= render 'shared/content_for_pages' %>

<div id="wrapper">

<main id="content" role="main" class="group">

<div class="back-section">
  <ol>
    <li><%= link_to t('registrations.form.back_button_label'), :back %></li>
  </ol>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :autocomplete => :off }) do |f| %>
<div class="text"><%= devise_error_messages! %></div>

<header class="page-header group">
    <div class="hgroup">
      <h1 class="heading-large" id="groupLabel"><%= t 'devise.passwords.forgotHeading'%></h1>
    </div>
</header>

  <div id="wrapper" data-journey="waste-carriers-registration:forgot-password">

		<div class="form-group" role="group" aria-labelledby="groupLabel">
      <%= validation_for(resource, :email) %>
      <p class="text"><%= t 'devise.passwords.sendInstructionsText'%></p>

        <details class="text">
          <summary id="show-hide-details-summary-0" aria controls='details-content-0' tabindex='0' aria-controls="details-content-0" role="button">
            <span class='summary'><%= t 'devise.passwords.sendInstructionsDetails'%></span>
          </summary>
            <div style='display:block' id='details-content-0' >
            <p><%= t 'devise.passwords.sendInstructionsSummaryText'%></p>
          </div>
        </details>

		  <%= f.label :email, class: 'form-label' %>
		  <%= f.email_field :email, class: 'form-control-1-2', :autofocus => true %>
		</div>
		<%= f.submit t('devise.passwords.sendInstructions'), {:class => "button", :id => "send_instructions_button"} %>
    <% end %>
  </div>

  </main><!-- end content -->
</div><!-- end wrapper -->
