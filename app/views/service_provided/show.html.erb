<%= render 'shared/content_for_pages' %>

<div id="wrapper">
  <main id="content" role="main" class="group">

    <% content_for :page_title, createTitle('.title') %>

    <div id="page3" data-journey="waste-carriers-registration:serviceprovided">

      <div class="back-section">
        <ol>
          <li><%= link_to t('form.back_button_label'), other_businesses_path %></li>
        </ol>
      </div>

      <%= form_for(@registration, :url => service_provided_path, html: {autocomplete: 'off'}) do |f| %>

        <%= render 'shared/errors' %>

        <header class="page-header group">
          <div class="hgroup">
            <h1 class="heading-large" id="groupLabel"><%= t '.subtitle' %></h1>
          </div>
        </header>

        <div class="form-group<%if @registration.errors[:isMainService].any?%> validation<%end%>" id="registration_isMainService" role="group" aria-labelledby="groupLabel">
          <%= validation_for(@registration, :isMainService) %>
          <%= f.label :main_service_label, for: "registration_isMainService_no", :class => "block-label" do %>
            <%= f.radio_button :isMainService, "no", :class => "radio" %>
            <%= t '.main_service_label' %>
          <% end %>
          <%= f.label :part_of_service_label, for: "registration_isMainService_yes", :class => "block-label" do %>
            <%= f.radio_button :isMainService, "yes", :class => "radio" %>
            <%= t '.part_of_service_label' %>
          <% end %>
        </div>

        <%= render 'shared/registration_continue_link' %>

      <% end %>

    </div>
  </main>
</div>
